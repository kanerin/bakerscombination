<!-- Sign up -->

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :name %>
            <p class="control has-icons-left">
              <%= f.text_field :name, autofocus: true, :placeholder => "nemename", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <%= f.label :email %>
            <p class="control has-icons-left">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
            </p>
          </div>
          <div class="field">
            <label for="user_password">
              パスワード
              <% if @minimum_password_length %>
              (<%= @minimum_password_length %> 文字以上)
              <% end %>
            </label>
            <p class="control has-icons-left">
              <%= f.password_field :password, autocomplete: "new-password", :placeholder => "password", class: "input", id: "pass" %>
                <span class="icon is-small is-left">
                  <i class="fas fa-lock"></i>
                </span>
            </p>
          </div>
          <div class="show_pass">
            <input type="checkbox" onChange="document.getElementById('pass').type = (this.checked) ? 'text' : 'password';">
            パスワードを表示する
          </div>
          <div class="field">
            <%= f.label :password_confirmation %>
            <p class="control has-icons-left">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "password confirmation", class: "input", id: "pass_confirm" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>
          <div class="show_pass">
            <input type="checkbox" onChange="document.getElementById('pass_confirm').type = (this.checked) ? 'text' : 'password';">
            パスワードを表示する
          </div>
          <div class="actions">
            <%= f.submit "Sign up", class: "button is-success" %>
          </div>
        <% end %>
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</section>
